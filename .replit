modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Flask App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask DB Init"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Set FLASK_APP and Init DB"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Apply Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Init Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create New Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Apply New Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Add Sample Wallets"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check Candidates"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Apply Migration Again"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Add Sample Wallets Again"

[[workflows.workflow]]
name = "Run Flask App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Flask DB Init"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask db init"

[[workflows.workflow]]
name = "Set FLASK_APP and Init DB"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export FLASK_APP=main.py && flask db init"

[[workflows.workflow]]
name = "Create Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export FLASK_APP=main.py && flask db migrate -m 'Remove DOGE address from Candidate model'"

[[workflows.workflow]]
name = "Apply Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export FLASK_APP=main.py && flask db upgrade"

[[workflows.workflow]]
name = "Init Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export FLASK_APP=main.py && flask db init"

[[workflows.workflow]]
name = "Create New Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export FLASK_APP=main.py && flask db migrate -m 'Add btc_address and doge_address to Candidate model'"

[[workflows.workflow]]
name = "Apply New Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export FLASK_APP=main.py && flask db upgrade"

[[workflows.workflow]]
name = "Add Sample Wallets"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python add_sample_wallets.py"

[[workflows.workflow]]
name = "Check Candidates"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python check_candidates.py"

[[workflows.workflow]]
name = "Apply Migration Again"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export FLASK_APP=main.py && flask db upgrade"

[[workflows.workflow]]
name = "Add Sample Wallets Again"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python add_sample_wallets.py"

[deployment]
run = ["sh", "-c", "python main.py"]

[[ports]]
localPort = 5000
externalPort = 80
